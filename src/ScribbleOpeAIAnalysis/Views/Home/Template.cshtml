@{
    var targetList = (List<string>)ViewBag.target;
    var armTemplate = ViewBag.armTemplate as string;
    var bicepTemplate = ViewBag.bicepTemplate as string;
    var armUrl = ViewBag.armUrl as string;
    var architectureName = ViewBag.nameTemplate as string;
}

@section Contents
{
    <link href="~/lib/prism/themes/prism.min.css" rel="stylesheet" />
}

<div class="p-5 mb-4 bg-body-tertiary rounded-3">
    <div class="container-fluid">
        <h1 class="display-5 fw-bold">Bicep Template</h1>
        <p class="col-md-8 fs-4">The components you provide:</p>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            @if (targetList.Any())
            {
                foreach (string item in targetList)
                {
                    <div class="col">
                        <div class="card mb-4 rounded-3">
                            <div class="card-header py-3">
                                <h4 class="my-0 fw-normal">@item</h4>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="row">
            <div class="mt-4 mb-4 d-flex justify-content-center">
                <!-- Deploy to Azure Button -->
                <a href="https://portal.azure.com/#create/Microsoft.Template/uri/@Uri.EscapeDataString(armUrl)" target="_blank" class="me-2">
                    <img src="https://aka.ms/deploytoazurebutton" alt="Deploy to Azure" />
                </a>

                <!-- Add to Bicep Template Registry Button with Info Icon -->
                <div class="d-flex align-items-center me-2">
                    <!-- <a class="btn btn-secondary" asp-action="BicepRegistry" asp-route-armtemplateLink="@armUrl" target="_blank">Click to generate Bicep template for solution</a>-->
                    <form asp-action="BicepRegistry" method="post">
                        <!-- Hidden input to pass armUrl as armtemplateLink -->
                        <input type="hidden" name="armtemplateLink" value="@armUrl" />
                        <input type="hidden" name="architectureName" value="@architectureName" />
                        <button type="submit" class="btn btn-secondary">
                            Add to Bicep Template Registry
                        </button>
                    </form>
                    <!-- Information Icon -->
                    <button type="button" class="btn btn-link p-0 ms-2" data-bs-toggle="modal" data-bs-target="#addToRegistryInfoModal">
                        <i class="bi bi-info-circle-fill text-secondary"></i>
                    </button>
                </div>

                <!-- Create Demo Deploy Package Button with Info Icon -->
                <div class="d-flex align-items-center">
                    <a href="@Url.Action("CreateDemoPackage", "Home")" class="btn btn-success">
                        Create Demo Deploy Package
                    </a>
                    <!-- Information Icon -->
                    <button type="button" class="btn btn-link p-0 ms-2" data-bs-toggle="modal" data-bs-target="#createDemoPackageInfoModal">
                        <i class="bi bi-info-circle-fill text-success"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<h2 class="display-6 text-center mb-4">Bicep template</h2>
<div class="container my-4">
    @if (!string.IsNullOrWhiteSpace(bicepTemplate))
    {
        <div data-prismjs-copy-timeout="500">
            <pre><code class="language-bicep" data-prismjs-copy="Copy the Bicep!">@Html.Raw(bicepTemplate)</code></pre>
        </div>
    }
</div>

<hr />

<h2 class="display-6 text-center mb-4">ARM template</h2>
<div class="container my-4">
    @if (!string.IsNullOrWhiteSpace(armTemplate))
    {
        <div data-prismjs-copy-timeout="500">
            <pre><code class="language-json" data-prismjs-copy="Copy the ARM template">@Html.Raw(armTemplate)</code></pre>
        </div>
    }
</div>

<!-- Modal for Add to Bicep Template Registry Information -->
<div class="modal fade" id="addToRegistryInfoModal" tabindex="-1" aria-labelledby="addToRegistryInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <!-- Close (X) Button -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 class="modal-title mb-3" id="addToRegistryInfoModalLabel">Add to Bicep Template Registry</h5>
                <p>
                    Use this option to add your Bicep templates to the official registry. This allows for easier management and sharing of your infrastructure as code.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Create Demo Deploy Package Information -->
<div class="modal fade" id="createDemoPackageInfoModal" tabindex="-1" aria-labelledby="createDemoPackageInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <!-- Close (X) Button -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 class="modal-title mb-3" id="createDemoPackageInfoModalLabel">Create Demo Deploy Package</h5>
                <p>
                    This feature allows you to generate a demo deployment package based on your current templates. It’s useful for testing and showcasing your infrastructure setup.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/prism/prism.min.js"></script>
    <script src="~/lib/prism/components/prism-bicep.min.js"></script>
    <script src="~/lib/prism/components/prism-json.min.js"></script>
}
