@{
    ViewData["Title"] = "Analysis Results";
    var list = ViewBag.content as List<string> ?? new List<string>();
    string imageUrl = ViewBag.imageUrl as string;
    string analysisId = ViewBag.id as string;
}

<div class="hero-section fade-in">
    <div class="container">
        <h1 class="display-4">Architecture Components</h1>
        <p class="lead text-body-secondary mb-5">Here are the components extracted from your architecture drawing</p>
    </div>
</div>

<div class="container">
    @if (list != null && list.Any())
    {
        <div class="analysis-components">
            @foreach (string item in list)
            {
                <div class="component-card fade-in">
                    <div class="component-icon">
                        <i class="bi bi-boxes"></i>
                    </div>
                    <h4 class="h5 mb-2">@item</h4>
                    <p class="text-body-secondary mb-0">Component detected in your architecture</p>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a asp-controller="Home" asp-action="Reference" asp-route-id="@analysisId" class="btn btn-primary btn-lg">
                <i class="bi bi-diagram-3 me-2"></i>
                Get Architecture Details
            </a>
        </div>
    }

    <div class="analysis-image-section mb-5">
        <div class="analysis-image-container">
            <div class="analysis-image-header">
                <h5 class="h4 mb-0">Architecture Diagram</h5>
            </div>
            <div class="analysis-image-content">
                <img src="@imageUrl" alt="Architecture Diagram" />
            </div>
        </div>
    </div>

    
</div>