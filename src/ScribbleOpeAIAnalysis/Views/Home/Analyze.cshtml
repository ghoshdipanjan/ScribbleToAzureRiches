@{
    ViewData["Title"] = "Analysis Results";
    var list = ViewBag.content as List<string> ?? new List<string>();
    string imageUrl = ViewBag.imageUrl as string;
    string analysisId = ViewBag.id as string;
}

<div class="hero-section fade-in">
    <div class="container">
        <h1 class="display-4">Architecture Components</h1>
        <p class="lead text-body-secondary mb-5">Here are the components extracted from your architecture drawing</p>
    </div>
</div>

<div class="features-grid">
    @if (list != null && list.Any())
    {
        foreach (string item in list)
        {
            <div class="feature-card fade-in">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-boxes me-3 fs-3 text-primary"></i>
                    <h4 class="mb-0">@item</h4>
                </div>
                <p class="text-body-secondary">Component detected in your architecture</p>
            </div>
        }
    }
</div>

<div class="row mb-5">
    <div class="row justify-content-center">
        @if (list != null && list.Any())
        {
            <a href="@Url.Action("Reference", "Home", new { id = analysisId })" class="btn btn-primary btn-lg col-4">Click
                to get architecture details</a>
        }
    </div>
</div>

<div class="row">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h5 class="my-0 fw-normal">The image being analyzed is:</h5>
                </div>
                <div class="card-body text-center">
                    <img src="@imageUrl" class="img-fluid" alt="Analyzed Image" />
                </div>
            </div>
        </div>
    </div>
</div>